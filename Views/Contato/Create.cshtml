 @model ContatoModel
@{
    ViewData["Title"] = "Criar de contatos";
}


<div class="text-center">

    <h1 class="display-4">Cadastrar Contato</h1>

</div>

<form asp-controller="Contato" asp-action="Create" method="post">


    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="cellphone">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br>
   
    <button type="submit" class="btn btn-primary d-block w-100" >Adicionar</button>
    <br>
    <a class="btn btn-secondary d-block w-100" asp-controller="Contato" asp-action="Index23" role="button">Voltar</a>

</form>

