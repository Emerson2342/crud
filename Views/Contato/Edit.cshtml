@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form asp-controller="Contato" asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="name" class="form-group">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="cellphone">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br>
    <br>

    <button type="submit" class="btn btn-primary d-block w-100">Alterar</button>
    <br>
    <a class="btn btn-secondary d-block w-100" asp-action="Index23" asp-controller="Contato" role="button">Voltar</a>

</form>

